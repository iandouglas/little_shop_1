<h2>ID: <%= @order.id %></h2>
<p>Order Placed: <%= @order.created_at%></p>
<p>Last Updated: <%= @order.updated_at%></p>
<p>Current Status: <%= @order.status%></p>
<% @order.items.each do |item| %>
  <section class="item-<%= item.id %>">
    <%= image_tag(item.thumbnail)  %>
    <p><%= item.name %> </p>
    <p>Description: <%= item.description %> </p>
    <p>Quantity: <%= item.quantity %> </p>
    <p>Price: <%= number_to_currency(item.price) %> </p>
    <p>Price: <%= number_to_currency(item.price) %> </p>
    <p>Sub Total: <%= number_to_currency(item.quantity_price(@order.id)) %> </p>

  </section>
  <% end %>
<p>Total Items: <%= @order.total_item_quantity %></p>
<p>Grand Total: <%= number_to_currency(@order.total_item_price) %></p>
