<% if flash[:error] %>
  <div class="error"><%= flash[:error] %></div>
<% end %>
<h1>Log In</h1>

<%= form_tag login_path do %>
<p><%= label_tag :email %>
  <%= text_field_tag :email %></p>
<p><%= label_tag :password %>
  <%= password_field_tag :password %></p>
<p><%= submit_tag "Sign In" %></p>
<% end %>
