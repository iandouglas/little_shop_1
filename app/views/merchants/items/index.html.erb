<h1>My Items</h1>
<%= link_to 'Add New Item' %>
<% @items.each do |item| %>
    <section id="item-<%= item.id %>">
    <p>Name: <%= item.name %></p>
    <p>ID: <%= item.id %></p>
    <%= image_tag "#{item.thumbnail}" %></p>
    <p>Price: <%= item.price %></p>
    <p>Current Inventory: <%= item.quantity %></p>
    <%= link_to "Edit Item" %>
    <% if item.enabled?%>
      <%= button_to 'Disable', merchant_disable_item_path(item), method: :patch %>
    <% elsif item.disabled?%>
    <%= button_to 'Enable', merchant_enable_item_path(item), method: :patch %>
    <% end %>
    <% if @unsold_items.include?(item) %>
      <%= link_to 'Delete Item' %>
    <% end %>
  </section>
<% end %>
