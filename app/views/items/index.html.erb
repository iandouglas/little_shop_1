<h1>Items Catalog</h1>

<% @items.each do |item| %>
  <section id="item-<%=item.id%>">
    <%= link_to item.name, item_path(item) %>
    <%= link_to image_tag(item.thumbnail, width: '200'), item_path(item) %>
    <p>Merchant: <%= item.user.username %></p>
    <p>Items in stock: <%= item.quantity %></p>
    <p>Price: <%= number_to_currency(item.price) %></p>
  </section>
<% end %>
<section class="statistics">
  <section class="stat-column" id="popular-items">
    <h3>5 Most Popular Items</h3>
    <ul>
      <% @most_popular.each do |item| %>
        <li><%= item.name %>: <%= item.total_fulfilled %></li>
      <% end %>
    </ul>
  </section>
  <section class="stat-column" id="unpopular-items">
    <h3>5 Least Popular Items</h3>
    <ul>
    <% @least_popular.each do |item| %>
      <li><%= item.name %>: <%= item.total_fulfilled %></li>
    <% end %>
  </ul>
  </section>
</section>
